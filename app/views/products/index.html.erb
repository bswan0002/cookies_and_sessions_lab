<%= form_tag products_path do %>
  <%= label_tag :product %>
  <%= text_field_tag :product %>
  <%= submit_tag "add to cart" %>
<% end %>

<h2>Here's your cart:</h2>
<% if session[:cart]%>
  <% session[:cart].each do |item|%>
    <div>
      <%= item %>
    </div>
  <% end %>
  <% else %>
  <%= "Your cart is empty right now."%>
<% end %>